generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id            String         @id @default(cuid())
  name          String
  integrations  Integration[]
  createdAt     DateTime       @default(now())
}

model Integration {
  id          String   @id @default(cuid())
  org         Org      @relation(fields: [orgId], references: [id])
  orgId       String
  provider    String
  keyCipher   Bytes
  keyIv       Bytes
  keyTag      Bytes
  keyVersion  String
  last4       String
  createdAt   DateTime @default(now())
}
